<h2>All Trains</h2>

<% if @trains.any?() %>
  <ul>
    <% @trains.each() do |train| %>
      <li><a href="/trains/<%= train.id() %>"><%= train.name() %>, <%= train.eta().strftime("%I:%M %p") %></a> </li>
    <% end %>
  </ul>

<% else %>
  <p>
    There aren't any trains yet.
  </p>
<% end %>

<h3>Add New Train</h3>
<form action="/operator/trains" method="post">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" name="name" id="name" class="form-control">

    <label for="train_eta">ETA</label>
    <input type="time" name="eta" id="eta" class="form-control">
  </div>
  <button type="submit" class="btn">Add Train</button>
</form>

<h3>Delete a Train</h3>
<form action="/operator/trains" method="post">
  <input type="hidden" name="_method" value="delete">
  <select id="train_select" name="train_select" type="text" class="form-control">
    <% @trains.each() do |train| %>
      <input type="hidden" name="train_id" value="<%= train.id() %>">
      <option value="<%= train.id() %>"><%= train.name() %></option>
    <% end %>
  </select>
  <br>
  <button type="submit" class="btn">Delete Train</button>
</form>
