<h2>Trains</h2>

<div id="trains_listing">
  <% if @stops.any?() %>
  <ul>
    <% @stops.each do |stop| %>
    <li><a href="/stops/<%= stop.id() %>"><%= stop.train().name()%>, <%= stop.city().name() %>, <%= stop.eta().strftime("%I:%M %p") %></a> </li>
    <% end %>
  </ul>
  <% else %>
  <p>
    There are no stops.
  </p>
  <% end %>
</div>


<h2>Cities</h2>
<div id="cities_listing">
  <% if @stops.any?() %>
    <ul>
      <% @stops.each do |stop| %>
        <li><a href="/stops/<%= stop.id() %>"><%= stop.city.name() %>, <%= stop.train.name() %>, <%= stop.eta().strftime("%I:%M %p") %></a></li>
      <% end %>
    </ul>

  <% else %>
    <p>
      There are no stops
    </p>
  <% end %>
</div>

<a href="/" class="btn btn-primary">Back</a>
